<%= link_to 'Delete', industry_path, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %> %>



<h1> <%= @industry.name %></h1>


  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Created At</th>
      <th>Update At</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @industry.name %></td>
      <td><%= @industry.description %></td>
      <td><%= @industry.created_at %></td>
      <td><%= @industry.updated_at %></td>
    </tr>
  </tbody>


<h2>Companies</h2>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
    </tr>
  </thead>

  <tbody>
  <% @industry.companies.each do |company| %>
    <tr>
      <td><%= company.name %></td>
      <td><%= company.description %></td>
    </tr>
  <% end %>
  </tbody>

</table>
