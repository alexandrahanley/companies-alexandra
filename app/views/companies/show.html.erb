<%= link_to 'Edit', edit_company_path(@company) %>
<%= link_to 'Delete', company_path, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %> %>


<h1> <%= @company.name %></h1>


  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Created At</th>
      <th>Update At</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @company.name %></td>
      <td><%= @company.description %></td>
      <td><%= @company.price %></td>
      <td><%= @company.created_at %></td>
      <td><%= @company.updated_at %></td>
    </tr>
  </tbody>


<h2>Industries</h2>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
    </tr>
  </thead>

  <tbody>
  <% @company.industries.each do |industry| %>
    <tr>
      <td><%= industry.name %></td>
      <td><%= industry.description %></td>
    </tr>
  <% end %>
  </tbody>

</table>
